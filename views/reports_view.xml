<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="reports_filter" model="ir.ui.view">
            <field name="name">reports.filter</field>
            <field name="model">report.reports</field>
            <field name="arch" type="xml">
                <search string="search reports">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="project_activity_id"/>
                    <field name="users_ids"/>
                    <field name="partecipants_customer_description"/>
                    <field name="start_journey_date"/>
                    <field name="end_journey_date"/>
                    <field name="start_activity_date"/>
                    <field name="end_activity_date"/>
                    <field name="activity_description"/>
                    <field name="customer_note"/>
                    <filter string="Prepaid" domain="[('order_type','=', 'prepaid')]"/>
                    <filter string="Comsumptive" domain="[('order_type','=', 'consumptive')]"/>
                    <filter string="To invoice" domain="[('to_invoice','=', True)]"/>
                    <filter string="Not to invoice" domain="[('to_invoice','!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="partner_id" string="Partner" context="{'group_by':'partner_id'}"/>
                        <filter name="project_id" string="Project" context="{'group_by':'project_id'}"/>
                        <filter name="project_activity_id" string="Activity" context="{'group_by':'project_activity_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_reports_tree" model="ir.ui.view">
            <field name="name">view_reports_tree.tree</field>
            <field name="model">report.reports</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="project_activity_id"/>
                    <field name="start_journey_date"/>
                    <field name="end_journey_date"/>
                    <field name="start_activity_date"/>
                    <field name="end_activity_date"/>
                    <field name="order_type"/>
                    <field name="to_invoice"/>
                </tree>
            </field>
        </record>

        <record id="view_reports_form" model="ir.ui.view">
            <field name="name">view_reports_form.form</field>
            <field name="model">report.reports</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                     <header>
                         <button name="action_to_confirm" states="draft" string="Confirm"  type="object" />
                         <button name="action_draft" state="draft" string="Cancel" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                         <button name="action_done" states="to invoice" string="Create invoice" type="object"/>
                         <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <field name="name" colspan="2"/>
                            <field name="partner_id" colspan="2" domain="[('parent_id', '=', False)]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="intervention_place"  string="Intervention place" colspan="2" domain="[('parent_id', '!=', False)]"/>
                            <field name="project_activity_id" colspan="2" domain="[('project_id', '=', project_id)]" position="replace"
                                   attrs="{'invisible':[('project_id', '=', False)], 'readonly': [('state', '!=', 'draft')]}" context="{'default_project_id' : project_id}"/>
                        </group>
                        <group>
                            <field name="project_id" domain="[('partner_id', '=', partner_id)]"
                                  options="{'no_create_edit':True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="order_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="to_invoice" string="To invoice" attrs="{'invisible':['|', ('order_type', '=', 'consumptive'), ('order_type', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="invoice_id" states="done"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_journey_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="end_journey_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="start_activity_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="end_activity_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Activity">
                            <field name="activity_description"/>
                        </page>
                         <page string="Notes">
                             <field name="notes_ids" context="{'default_partner_id': partner_id, 'default_report_id': id}" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                 <tree>
                                     <field name="date_and_hour"/>
                                     <field name="notes"/>
                                     <field name="worked"/>
                                 </tree>
                                 <form>
                                     <field name="partner_id" attrs="{'invisible':1}"/>
                                     <group>
                                         <field name="notes"/>
                                     </group>
                                     <group col="6">
                                         <group colspan="4">
                                             <field name="date_and_hour"/>
                                         </group>
                                         <group colspan="2">
                                             <field name="worked"/>
                                         </group>
                                     </group>
                                     <group>
                                         <field name="report_id" attrs="{'invisible':1}"/>
                                     </group>
                                 </form>
                             </field>
                         </page>
                         <page string="Formation">
                             <group>
                                 <field name="users_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                     <tree>
                                         <field name="name" string="Trainer user"/>
                                     </tree>
                                 </field>
                                 <field name="partecipants_customer_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                             </group>
                         </page>
                         <page string="Customer note">
                             <field name="customer_note"/>
                         </page>
                    </notebook>
                    <group>
                    </group>
                    <group>
                        <field name="digital_sign" widget="signature" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_reports" model="ir.actions.act_window">
            <field name="name">Reports</field>
            <field name="res_model">report.reports</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="action_menu_reports" parent="project.menu_project_management" name="Technical reports"  action="action_reports"/>
    </data>
</odoo>