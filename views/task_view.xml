<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_technical_reports_search_form" model="ir.ui.view">
            <field name="name">report.reports.search.form</field>
            <field name="model">report.reports</field>
            <field name="arch" type="xml">
                <search string="search reports">
                    <field name="project_activity_id"/>
                </search>
            </field>
        </record>

        <record id="act_technical_reports" model="ir.actions.act_window">
            <field name="name">Technical reports</field>
            <field name="res_model">report.reports</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {
                'search_default_project_activity_id': [active_id],
                'default_project_activity_id': active_id,
                }
            </field>
            <field name="search_view_id" ref="view_technical_reports_search_form"/>
        </record>

        <record model="ir.ui.view" id="report_task_view">
            <field name="name">report.task.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//button" position="before">
                    <button name="%(act_technical_reports)d" type="action" string="Report tasks" widget="statinfo"
                            class="oe_stat_button" icon="fa-list">
                        <field name="technical_reports_count" widget="statinfo" nolabel="1"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</openerp>