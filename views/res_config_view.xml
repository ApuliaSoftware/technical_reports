<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <record model="ir.ui.view" id="project_setting_report">
            <field name="name">project.setting.report</field>
            <field name="model">project.config.settings</field>
            <field name="inherit_id" ref="project.view_config_settings"/>
            <field name="arch" type="xml">
                  <xpath expr="//group" position="after">
                      <group string="Reports management" name="reports_management">
                          <field name="labor_service_id" domain="[('type', '=', 'service')]"/>

                          <field name="travel_costs_ids">
                                 <tree editable="bottom">
                                     <field name="from_km"/>
                                     <field name="to_km"/>
                                     <field name="fixed_cost"/>
                                     <field name="variable_cost"/>
                                 </tree>
                                 <form>
                                     <group>
                                         <group>
                                             <field name="from_km"/>
                                             <field name="fixed_cost"/>
                                         </group>
                                         <group>
                                             <field name="to_km"/>
                                             <field name="variable_cost"/>
                                         </group>
                                     </group>
                                 </form>
                             </field>

                          <field name="travel_product" domain="[('type', '=', 'service')]"/>
                      </group>
                  </xpath>
            </field>
        </record>

</odoo>


